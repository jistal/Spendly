                  <HBox fx:id="spendingsChartContainer" layoutX="10.8" layoutY="33.2" prefHeight="418.0" prefWidth="530.0" style="-: white;" AnchorPane.bottomAnchor="33.0" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="23.0">
                     <children>
                        <AreaChart fx:id="spendingsChart" HBox.hgrow="ALWAYS">
                          <xAxis>
                            <CategoryAxis side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis side="LEFT" />
                          </yAxis>
                        </AreaChart>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </center>
</BorderPane>
