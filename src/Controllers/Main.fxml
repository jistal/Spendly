                        <Insets left="10.0" right="10.0" top="30.0" />
                     </HBox.margin></Label>
               </children>
            </HBox>
         </top>
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                <!--  Earnings Chart -->
                  <HBox fx:id="earningsChartContainer" layoutX="0.8" layoutY="23.2" prefHeight="418.0" prefWidth="530.0" style="-: white;" AnchorPane.bottomAnchor="33.0" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="23.0">
